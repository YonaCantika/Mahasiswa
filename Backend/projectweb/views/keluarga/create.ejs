<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">

                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Form Add Kartu Keluarga</h3>
                            <form action="/keluarga/store" method="post">

                                <div class="row">
                                    <div class="col-md-12 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" name="no_kk" id="firstName"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="firstName">No KK</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" name="alamat" id="lastName"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="lastName">Alamat</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" name="kode_pos" id="firstName"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="firstName">Kode Pos</label>
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" name="rt" id="lastName"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="lastName">RT</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" name="rw" id="firstName"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="firstName">RW</label>
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" name="desa" id="lastName"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="lastName">Desa/Kelurahan</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" name="kec" id="firstName"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="firstName">Kecamatan</label>
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" name="kab" id="lastName"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="lastName">Kabupaten/Kota</label>
                                        </div>

                                    </div>
                                    <div class="col-md-6 mb-4">

                                        <div data-mdb-input-init class="form-outline">
                                            <input type="text" name="prov" id="firstName"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="firstName">Provinsi</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="mt-1 pt-1">
                                    <input data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit"
                                        value="Submit" />
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>